<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AgileMarket" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="ThemeGeral" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:navigationBarColor">@color/gray</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>